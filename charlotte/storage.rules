rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Signal attachments
    // Path: signals/{signalId}/attachments/{filename}
    match /signals/{signalId}/attachments/{filename} {
      // Anyone authenticated can read signal attachments
      allow read: if request.auth != null;

      // Authenticated users can upload attachments
      // Size limit: 10MB per file
      allow create: if request.auth != null
                    && request.resource.size < 10 * 1024 * 1024;

      // No updates or deletes (append-only philosophy)
      allow update, delete: if false;
    }

    // Node attachments (profile images, documents)
    // Path: nodes/{nodeId}/attachments/{filename}
    match /nodes/{nodeId}/attachments/{filename} {
      allow read: if request.auth != null;

      allow create: if request.auth != null
                    && request.resource.size < 10 * 1024 * 1024;

      // Allow update for profile image changes
      allow update: if request.auth != null
                    && request.resource.size < 10 * 1024 * 1024;

      // No deletes from client
      allow delete: if false;
    }

    // Chat attachments
    // Path: chats/{chatId}/{messageId}/{filename}
    match /chats/{chatId}/{messageId}/{filename} {
      allow read: if request.auth != null;

      allow create: if request.auth != null
                    && request.resource.size < 10 * 1024 * 1024;

      allow update, delete: if false;
    }
  }
}
