;;; ================================================================
;;; 8. PROTOCOLS — Operational rules
;;; ================================================================

(isa Protocol-AnimalRegistration PROTOCOL)
(hasTrigger Protocol-AnimalRegistration ManualInvocation)
(hasCondition Protocol-AnimalRegistration
  (and (isa ?Animal IndividualEntity)
       (SIRE_OF ?Sire ?Animal) (DAM_OF ?Dam ?Animal)
       (registeredWith ?Sire TSA) (registeredWith ?Dam TSA)
       (breedOf ?Animal TamworthBreed)))
(hasAction Protocol-AnimalRegistration
  (and (CreateNode ?Animal) (registeredWith ?Animal TSA)
       (CreateEdge CHILD_OF ?Animal ?Sire) (CreateEdge CHILD_OF ?Animal ?Dam)))
(comment Protocol-AnimalRegistration "Register a purebred Tamworth. Both sire and dam must be TSA-registered.")

(isa Protocol-PedigreeVerification PROTOCOL)
(hasTrigger Protocol-PedigreeVerification ManualInvocation)
(hasCondition Protocol-PedigreeVerification
  (and (registeredWith ?Animal TSA)
       (thereExists ?Pedigree (pedigreeOf ?Animal ?Pedigree))))
(hasAction Protocol-PedigreeVerification
  (and (EvaluateRule verifyAncestry ?Animal 3)
       (UpdateAttribute ?Animal pedigreeVerified TRUE)))
(comment Protocol-PedigreeVerification "Verify ancestry to three generations. Critical for breed purity in a small population.")

(isa Protocol-BreedStandard PROTOCOL)
(hasTrigger Protocol-BreedStandard ManualInvocation)
(hasCondition Protocol-BreedStandard (breedOf ?Animal TamworthBreed))
(hasAction Protocol-BreedStandard
  (and (EvaluateRule coloration ?Animal TamworthBreed)
       (EvaluateRule bodyLength ?Animal TamworthBreed)
       (EvaluateRule earSet ?Animal TamworthBreed)
       (EvaluateRule snoutLength ?Animal TamworthBreed)
       (EvaluateRule structuralSoundness ?Animal)))
(comment Protocol-BreedStandard "Evaluate against Tamworth standard: red-gold coloration, long lean body, erect ears, long straight snout.")

(isa Protocol-HeritageCertification PROTOCOL)
(hasTrigger Protocol-HeritageCertification ManualInvocation)
(hasCondition Protocol-HeritageCertification
  (and (registeredWith ?Animal TSA) (hasAttribute ?Animal pedigreeVerified TRUE)))
(hasAction Protocol-HeritageCertification
  (and (EvaluateRule heritageBreedEligibility ?Animal)
       (UpdateAttribute ?Animal heritageCertified TRUE)
       (CreateSignal heritageCertification ?Animal)))
(comment Protocol-HeritageCertification "Certify as heritage breed for premium market access. Requires registration and verified pedigree.")

(protocolPriority Protocol-AnimalRegistration 1)
(protocolPriority Protocol-PedigreeVerification 2)
(protocolPriority Protocol-BreedStandard 3)
(protocolPriority Protocol-HeritageCertification 4)

;;; ================================================================
;;; 9. INFERENCE RULES
;;; ================================================================

;; Heritage breed value: threatened breed in growing market commands premium
(implies
  (and (registersBreed TSA ?Breed)
       (hasAttribute ?Breed conservationStatus "Threatened")
       (servesMarket ?Breed ?Market) (hasState ?Market Growing))
  (hasHeritageValuePremium ?Breed ?Market))

;; Market premium: heritage certification enables premium pricing
(implies
  (and (hasAttribute ?Animal heritageCertified TRUE)
       (breedOf ?Animal TamworthBreed) (servesMarket TamworthBreed ?Market))
  (qualifiesForPremium ?Animal ?Market))

;; Small population risk: low breeder count signals genetic bottleneck
(implies
  (and (hasAttribute TSA-TotalBreeders currentValue ?Count)
       (hasThreshold TSA-TotalBreeders LowerBound ?Min) (lessThan ?Count ?Min))
  (hasSeverity TSA-TotalBreeders Critical))

;; Partnership eligibility: both organizations must be Active
(implies
  (and (partnersWith ?A ?B) (hasState ?A Active) (hasState ?B Active))
  (partnershipEligible ?A ?B))

;; Foraging advantage derives natural pasture market fit
(implies
  (and (hasAttribute ?Breed keyTraits ?Traits)
       (substringOf "foraging" ?Traits) (servesMarket ?Breed PastureRaisedSegment))
  (hasNaturalMarketFit ?Breed PastureRaisedSegment))

